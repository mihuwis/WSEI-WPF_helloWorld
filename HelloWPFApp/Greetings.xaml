<Window x:Class="HelloWPFApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWPFApp"
        mc:Ignorable="d"
        Title="Greetings" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="33*"/>
            <RowDefinition Height="184*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock HorizontalAlignment="Left" Margin="238,66,0,0" TextWrapping="Wrap" Text="Select a message option and then choose the Display button." VerticalAlignment="Top" Grid.ColumnSpan="2" Grid.RowSpan="2"/>
        <RadioButton Name="HelloButton" Content="Hello" HorizontalAlignment="Left" Margin="238,76,0,0" Grid.Row="1" VerticalAlignment="Top" IsChecked="True"/>
        <RadioButton Name="GoodbyeButton" Grid.Column="1" Content="Goodbye" HorizontalAlignment="Left" Margin="77,76,0,0" Grid.Row="1" VerticalAlignment="Top"/>
        <Button Content="Display" HorizontalAlignment="Left" Margin="380,210,0,0" Grid.Row="1" VerticalAlignment="Top" Grid.ColumnSpan="2" Click="Button_Click"/>

    </Grid>
</Window>
